<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_graph"
    app:startDestination="@id/weatherMainFragment">

    <fragment
        android:id="@+id/weatherMainFragment"
        android:name="com.example.testlandgorilla.ui.savedcities.WeatherMainFragment"
        android:label="WeatherMainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_weatherMainFragment_to_searchCitiesFragment"
            app:destination="@id/searchCitiesFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchCitiesFragment"
        android:name="com.example.testlandgorilla.ui.searcher.SearchCitiesFragment"
        android:label="SearchCitiesFragment"
        tools:layout="@layout/fragment_search_cities">
        <action
            android:id="@+id/action_searchCitiesFragment_to_detailWeatherFragment"
            app:destination="@id/detailWeatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailWeatherFragment"
        android:name="com.example.testlandgorilla.ui.detail.DetailWeatherFragment"
        android:label="DetailWeatherFragment">
        <argument
            android:name="city"
            app:argType="string" />
        <argument
            android:name="country"
            app:argType="string" />
        <argument
            android:name="latitude"
            app:argType="string" />
        <argument
            android:name="longitude"
            app:argType="string" />
        <action
            android:id="@+id/action_detailWeatherFragment_to_weatherMainFragment"
            app:destination="@id/weatherMainFragment"/>
    </fragment>

</navigation>